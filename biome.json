{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "files": {
    "include": ["*.css", "*.json", "*.ts", "*.tsx"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "asNeeded",
      "quoteProperties": "asNeeded",
      "semicolons": "asNeeded"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "correctness": {
        "noChildrenProp": "off"
      },
      "style": {
        "useTemplate": "off"
      },
      "suspicious": {
        "noDoubleEquals": "off",
        "noShadowRestrictedNames": "off"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
