{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleDetection": "force",
    "target": "ESNext",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "noEmit": true,
    "verbatimModuleSyntax": true,

    /* Linting */
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "strict": true
  }
}
